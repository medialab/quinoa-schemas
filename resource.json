{
    "id": "resource",
    "title": "Resource",
    "description": "Resources used in quinoa",
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "properties":
    {
        "id":
        {
            "type": "string",
            "description": "id of the resource(uuid v4)",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "type":
        {
            "type": "string",
            "enum": ["resource"],
            "default": "resource",
            "editable": false
        },
        "lastUpdateAt":
        {
            "type": "number",
            "editable": false
        },
        "createdAt":
        {
            "type": "number",
            "editable": false
        },
        "metadata":
        {
            "description": "metadata of the resource",
            "type": "object",
            "properties":
            {
                "type":
                {
                    "type": "string",
                    "enum": ["image", "table", "bib", "video", "webpage", "glossary", "embed"]
                },
                "title":
                {
                    "type": "string",
                    "description": "Name of the resource",
                    "default": ""
                },
                "date":
                {
                    "type": "string",
                    "description": "Date of creation attributed to the resource",
                    "default": ""
                },
                "authors":
                {
                    "type": "array",
                    "description": "creators of the resource",
                    "default": [],
                    "items":
                    {
                        "type": "string",
                        "required": ["given", "family"]
                    }
                },
                "description":
                {
                    "type": "string",
                    "description": "description of the resource",
                    "longString": true,
                    "default": ""
                },
                "source":
                {
                    "type": "string",
                    "description": "source of the resource",
                    "longString": true,
                    "default": ""
                }
            }
        },
        "data":
        {
            "description": "data of the resource (depends on resource type)",
            "anyOfFrom": "metadata.resource_type",
            "anyOf": [
            {
                "$ref": "#/definitions/image"
            },
            {
                "$ref": "#/definitions/table"
            },
            {
                "$ref": "#/definitions/bib"
            },
            {
                "$ref": "#/definitions/video"
            },
            {
                "$ref": "#/definitions/webpage"
            },
            {
                "$ref": "#/definitions/glossary"
            },
            {
                "$ref": "#/definitions/embed"
            }
            ]
        }
    },
    "required": ["type", "metadata", "data"],

    "definitions":
    {
        "image":
        {
            "accept_mimetypes": ["image/png","image/svg+xml", "image/jpeg", "image/jpg", "image/gif"],
            "anyOf": [
                {
                    "type": "object",
                    "properties": {
                        "base64": {
                            "type": "string"
                        }
                    },
                    "required": ["base64"]
                },
                {
                    "type": "object",
                    "properties": {
                        "url": {
                            "filePath": "string"
                        }
                    },
                    "required": ["filePath"]
                }
            ],
            "showMetadata": true
        },
        "table":
        {
            "accept_mimetypes": ["text/csv", "text/tsv"],
            "anyOf": [
                {
                    "type": "object",
                    "properties": {
                        "json": {
                            "type": "array",
                            "items": {
                                "type": "object"
                            }
                        }
                    },
                    "required": ["json"]
                },
                {
                    "type": "object",
                    "properties": {
                        "filePath": {
                            "type": "string"
                        }
                    },
                    "required": ["filePath"]
                }
            ],
            "showMetadata": true
        },
        "video":
        {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "description": "vimeo or youtube url of the video",
              "minLength": 1
            }
          },
          "additionalProperties": false,
          "showMetadata": true,
          "required": ["url"]
        },
        "embed":
        {
          "type": "object",
          "properties": {
            "html": {
              "type": "string",
              "description": "html code of the resource",
              "minLength": 1
            }
          },
          "additionalProperties": false,
          "showMetadata": true,
          "required": ["html"]
        },
        "bib":
        {
          "type": "array",
          "showMetadata": false,
          "title_path": ["data", 0, "title"]
        },
        "webpage":
        {
          "type": "object",
          "properties": {
            "url":
            {
              "type": "string",
              "description": "url of the webpage view",
              "minLength": 1
            }
          },
          "additionalProperties": false,
          "title_path": ["metadata", "title"],
          "showMetadata": true,
          "required": ["url"]
        },
        "glossary":
        {
          "type": "object",
          "properties": {
            "name":
            {
              "type": "string",
              "description": "name of the glossary entry",
              "minLength": 1
            },
            "description":
            {
                "type": "string",
                "description": "description of the glossary entry"
            }
          },
          "title_path": ["data", "name"],
          "additionalProperties": false,
          "showMetadata": false,
          "required": ["name"]
        }
    }
}